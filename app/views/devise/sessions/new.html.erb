<style type="text/css">
    .container form {
        background: #f7f7f7;
        box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
        padding: 30px;
        color: black;
        margin-top: 80px;
        text-align: center;
    }
    .container h2 {
        margin: 0 0 15px;
    }
    .form-inputs {
        min-height: 38px;
        border-radius: 2px;
    }
    .form-actions {
        font-size: 15px;
        font-weight: bold;
        padding-bottom: 10px;
    }
    .btn {
      color: white;
      background-color: #FD6A02;
    }
    .login {
      color: #FD6A02;
    }
</style>

<div class="devisebanner" style="background-image:linear-gradient(-200deg, rgba(0,90,168,0.9), 0%, rgba(10,50,61,0.3) 40%), url('<%= image_path("signup.jpg") %>');">
  <div class="banner-content">
    <div class="container">
      <div class="row">
        <div class="col-xs-12 col-sm-6 col-sm-offset-3">
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs">
              <div class="login">
                 <h2>Log in</h2>
              </div>
              <%= f.input :email,
                          required: false,
                          autofocus: true,
                          input_html: { autocomplete: "email" } %>
              <%= f.input :password,
                          required: false,
                          input_html: { autocomplete: "current-password" } %>
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            </div>

            <div class="form-actions">
              <%= f.button :submit, "Log in" %>
            </div>
            <%= render "devise/shared/links" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>






