<div class="navbar-hint"></div>
<div class="navbar-wagon">
  <!-- Logo -->
  <div class="logo">
    <div class="logo-logo">
      <%= link_to image_tag("logo.png"), root_path, class: "navbar-wagon-brand" %>
    </div>
    <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <div class="navbar_name">
      <h2>SociaLunch</h2>
    </div>
    <% end %>
  </div>
  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">
    <% if user_signed_in? %>
    <h5><%= link_to "SociaLunch History", lunch_dates_path %></h5>
    <h5>Hello <%= current_user.first_name.try(:capitalize) %>!</h5>
    <div id="score_box" style="background-image:url('<%= image_path("favourite-31.png") %>');">
          <div class="score"><%= current_user.score %></div>
        </div>
    <!-- Links when logged in -->
    <!-- Avatar with dropdown menu -->
    <div class="navbar-wagon-item">
      <div class="dropdown">
        <% if current_user.photo.url %>
        <%= cl_image_tag current_user.photo, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
        <% else %>
        <%= image_tag "default_avatar.png", class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
        <% end %>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li>
            <%= link_to edit_user_registration_path do %>
            <i class="fa fa-user"></i> <%= t(".profile", default: "Edit Profile") %>
            <% end %>
          </li>
          <li>
            <%= link_to destroy_user_session_path, method: :delete do %>
            <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
    <% else %>
    <!-- Login link (when logged out) -->
    <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <% end %>
  </div>
  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
      </ul>
    </div>
  </div>
</div>
