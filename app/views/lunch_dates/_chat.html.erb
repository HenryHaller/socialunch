
<div class="chat">
  <div class="chat-header">
    <h4>Chat with <strong><%= "#{secondary_user.first_name.capitalize} #{secondary_user.last_name.capitalize}" %></strong></h4>
  </div>
  <div class="messages">
    <% @lunch_date.messages.each do |message| %>
    <%= render "messages/message", message: message, user_is_messages_author: message.user == current_user %>
    <% end %>
  </div>
  <div id="create-message">
    <%= simple_form_for [ @lunch_date, Message.new ], remote: true, html: {autocomplete: "off" } do |f| %>
      <%= f.input :content, label: false, placeholder: "type message...", class: "message-input" %>
      <%= f.button :submit, value: 'Send', class: "message-submit" %>
    <% end %>
  </div>
</div>
