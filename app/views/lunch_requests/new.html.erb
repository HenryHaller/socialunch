<style type="text/css">
  .container {
    width: 600px;
    margin: 50px auto;
    color: black;
  }
    .container form {
      margin-bottom: 15px;
        background: #f7f7f7;
        box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
        padding: 30px;
    }
    .btn {
      color: white;
      background-color: #FD6A02;
    }
    .form-inputs {
        min-height: 38px;
        border-radius: 2px;
    }

    .title {
      font-size: 32px;
    }

</style>
<div class="devisebanner" style="background-image:linear-gradient(-200deg, rgba(0,90,168,0.9), 0%, rgba(10,50,61,0.3) 40%), url('<%= image_path("lunch_together.jpg") %>');">
  <div class="banner-content">
    <div class="container">
      <div class="row">
        <div class="col-sm-8 col-sm-offset-2">
          <div class="text-center">
            <%= simple_form_for @lunch_request do |f| %>
              <div class="form-inputs">
                  <%= f.input :lunch_type, label: 'What kind of SociaLunch is today?', collection: LunchRequest::TYPES, as: :radio_buttons %>
                  <%= f.input :datetime, label: 'What time are you available? Select from dropdown', collection: ["10:00", "10:15", "10:30", "10:45", "11:00", "11:15", "11:30", "11:45", "12:00", "12:15", "12:30", "12:45", "1:00", "1:15", "1:30", "1:45", "2:00", "2:15", "2:30", "2:45", "3:00"] %>
                  <%= f.input :suggested_duration, label: 'How long can you lunch?(Min)', collection: [30, 60, 90, 120] %>
                  <%= f.input :address, label: "Where are you?" %>

                <%= f.button :submit %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>



