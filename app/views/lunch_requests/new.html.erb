<style type="text/css">
  .form-inputs {
      border-radius: 2px;
      margin-bottom: 50px;
      margin-top: 50px;
      left: 50px;
      text-align: center;
  }
</style>
<%= javascript_include_tag "https://maps.googleapis.com/maps/api/js?libraries=places&key=#{ENV["GOOGLE_API_BROWSER_KEY"]}" %>
<div class="devisebanner" style="background-image:linear-gradient(-200deg, rgba(0,90,168,0.9), 0%, rgba(10,50,61,0.3) 40%), url('<%= image_path("group-dining.jpg") %>');">
  <div class="banner-content">
    <div class="container">
      <div class="row">
        <div class="col-xs-12 col-sm-12">
          <%= f.button :submit, value: 'Ready to Eat!', class: "lunch_request_btn" %>
          <div id="map" style="width: 100%; height: 500px;" class="lunch_request_new_map"></div>
          <%= javascript_pack_tag "request_new_map" %>
          <%= simple_form_for @lunch_request do |f| %>
            <div class="form-inputs">
              <input type="hidden" id="lat" name="lunch_request[latitude]" value="0" />
              <input type="hidden" id="lng" name="lunch_request[longitude]" value="0" />
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>