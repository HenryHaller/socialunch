<style type="text/css">
  .container {
    width: 600px;
    margin: 50px auto;
    color: black;
  }
    .container form {
      margin-bottom: 15px;
        background: #f7f7f7;
        box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
        padding: 0px;
    }
    .btn {
      color: white;
      background-color: #FD6A02;
      width: 100%;
    }
    .form-inputs {
        min-height: 38px;
        border-radius: 2px;
    }
  
    .title {
      font-size: 32px;
    }
</style>
<%= javascript_include_tag "https://maps.googleapis.com/maps/api/js?libraries=places&key=#{ENV["GOOGLE_API_BROWSER_KEY"]}" %>
<div class="devisebanner" style="background-image:linear-gradient(-200deg, rgba(0,90,168,0.9), 0%, rgba(10,50,61,0.3) 40%), url('<%= image_path("lunch_together.jpg") %>');">
  <div class="banner-content">
    <div class="container">
      <div class="row">
        <div class="col-sm-8 col-sm-offset-2">
          <div class="text-center">
            <%= simple_form_for @lunch_request do |f| %>
              <div class="form-inputs">
                <input type="hidden" id="lat" name="lunch_request[latitude]" value="0" />
                <input type="hidden" id="lng" name="lunch_request[longitude]" value="0" />
                <%= f.button :submit, value: 'Ready to Eat!' %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div id="map" style="width: 100%; height: 600px;"></div>
<%= javascript_pack_tag "request_new_map" %>
<script></script>